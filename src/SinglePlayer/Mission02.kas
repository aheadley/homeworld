                                    Jump MASTERLooking;
                            ENDIF
                    ELSEIF (VarGet ("AttackingResource") = TRUE)                    // If Collector is dead, go back to watch loop
                            IF (ShipsCount (SHIPS_ACT3Resource2) = 0)
