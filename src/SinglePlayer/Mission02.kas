                    ELSEIF ( (ShipsCount (SHIPS_ACT3WORLDFighter2) > 3) OR      // ELSE, if there are ships in the EntireWorld volume, go attack them
                             (ShipsCount (SHIPS_ACT3WORLDCorvette2) > 2) OR
