                            ShipsSelectClass (SHIPS_ACT3Corvettes2CorvetteLOOK, SHIPS_ACT3Corvettes2UnderAttack, "CLASS_Corvette");
                            IF (ShipsCount (SHIPS_ACT3Corvettes2FighterLOOK) > 3)
                                    Jump Defend;
