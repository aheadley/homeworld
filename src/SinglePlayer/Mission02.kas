                            ShipsSelectType (SHIPS_SalvageCorvettes, SHIPS_NearDerelict, "SalCapCorvette"); // Filter out the Salvage Corvettes
                            VarSet ("G_SalvageCorvettesSHIPS", (ShipsCount (SHIPS_SalvageCorvettes)));
