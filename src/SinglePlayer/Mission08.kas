                    MsgSend(TEAM_Swarmer6Team,       "DefendMothership");
                    MsgSend(TEAM_Swarmer6TeamLeader, "DefendMothership");
                    MsgSend(TEAM_FuelPod6Team,       "DefendMothership");
                ELSEIF (VarGet("WaveNum") == 3)
