                TimerCreateSetStart("LBXTimer", 4);
            ENDINIT
            WATCH
                IF ((TimerRemaining("LBXTimer") == 0))
                    JUMP EnemyGoingHere;
                ENDIF
            ENDWATCH
        ENDSTATE LBXIn1

        //---------------------------
        // Events: EnemyGoingHere
        // Fleet Intel points out the swarmer's destination
        STATE EnemyGoingHere
            INIT
                OpenSensors(45000);
