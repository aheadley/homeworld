//                    Print("PrimaryDestroyerOutOfTargets");
                    JUMP AttackGeneral;
                ENDIF
            ENDINIT
            WATCH
//                IF (ShipsOrder(THISTEAMSHIPS) != COMMAND_ATTACK)
//                    JUMP PrimaryDestroyerAssault;
