                    ShipsSelectType(SHIPS_Targets, SHIPS_AssaultEnemy, "Carrier")           ||
                    ShipsSelectType(SHIPS_Targets, SHIPS_AssaultEnemy, "StandardDestroyer") ||
                    ShipsSelectType(SHIPS_Targets, SHIPS_AssaultEnemy, "MissileDestroyer")  ||
